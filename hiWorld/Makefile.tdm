
FILE=hiWorld
SOURCE=$(FILE).c
COMPILED=$(FILE).o
TMP_FOLDER=gcc

COMPILER_FOLDER=C:\Programs\Dev-Cpp\MinGW64

CC=$(COMPILER_FOLDER)\bin\gcc
INCLUDES_FOLDER=
CC_ARGS=-c  

LINK=$(COMPILER_FOLDER)\bin\gcc
LIBRARIES_FOLDER=
LINK_ARGS=-o $(FILE).exe
LIBRARIES=

$(COMPILED): $(SOURCE)
	$(CC) $(INCLUDES_FOLDER) $(CC_ARGS) -o$(TMP_FOLDER)\$(COMPILED) $(SOURCE)

compile: $(COMPILED)

link: $(COMPILED)
	$(LINK) $(LIBRARIES_FOLDER) $(LINK_ARGS) $(TMP_FOLDER)\$(COMPILED) $(LIBRARIES)
